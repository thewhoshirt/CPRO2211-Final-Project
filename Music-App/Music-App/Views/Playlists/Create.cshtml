<!-- import the playlist model -->
@model Music_App.Models.Playlist
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>Playlist</h4>
<hr />
<!-- form to get the playlist name from the user -->
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlaylistName" class="control-label"></label>
                <input asp-for="PlaylistName" class="form-control" />
                <span asp-validation-for="PlaylistName" class="text-danger"></span>
            </div>
            <!-- button to save the data as an entity in the database -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-top:10px;" />
            </div>
        </form>
    </div>
</div>
<!-- button to send the user back to the database view when clicked -->
<div>
    <a class="btn btn-secondary" style="margin-top:10px;" asp-action="Database">Back to List</a>
</div>
<!-- get the info from the database asynchronously -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
